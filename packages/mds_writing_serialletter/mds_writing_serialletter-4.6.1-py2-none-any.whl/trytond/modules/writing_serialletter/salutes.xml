<?xml version="1.0"?>
<tryton>
    <data>

        <!-- view for form and tree -->
        <record model="ir.ui.view" id="salutes_view_form">
            <field name="model">writing_serialletter.salutes</field>
            <field name="type">form</field>
            <field name="name">salutes_form</field>
        </record>
        <record model="ir.ui.view" id="salutes_view_tree">
            <field name="model">writing_serialletter.salutes</field>
            <field name="type">tree</field>
            <field name="name">salutes_tree</field>
        </record>

        <record model="ir.action.act_window" id="act_writing_serialletter_salutes_form">
            <field name="name">Salutation</field>
            <field name="res_model">writing_serialletter.salutes</field>
        </record>

        <record model="ir.action.act_window.view" id="act_writing_serialletter_salutes_form1">
            <field name="sequence" eval="10"/>
            <field name="view" ref="salutes_view_tree"/>
            <field name="act_window" ref="act_writing_serialletter_salutes_form"/>
        </record>
        <record model="ir.action.act_window.view" id="act_writing_serialletter_salutes_form2">
            <field name="sequence" eval="20"/>
            <field name="view" ref="salutes_view_form"/>
            <field name="act_window" ref="act_writing_serialletter_salutes_form"/>
        </record>

        <!-- menuitem -->
        <menuitem parent="party.menu_configuration" 
                    action="act_writing_serialletter_salutes_form"
                    id="menu_salutes" sequence="50" icon="tryton-list"/>
        <record model="ir.ui.menu-res.group" 
                id="menu_salutes-group_party_admin">
            <field name="menu" ref="menu_salutes"/>
            <field name="group" ref="party.group_party_admin"/>
        </record>

        <!-- permissions -->
        <record model="ir.model.access" id="access_salutes_anon">
            <field name="model" search="[('model', '=', 'writing_serialletter.salutes')]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_delete" eval="False"/>
        </record>
        <record model="ir.model.access" id="access_salutes_edit">
            <field name="model" search="[('model', '=', 'writing_serialletter.salutes')]"/>
            <field name="group" ref="party.group_party_admin"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_delete" eval="True"/>
        </record>

    </data>
</tryton>
