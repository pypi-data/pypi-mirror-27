""" install botlib locally. """

import os
import importlib
import sys
import warnings

warnings.simplefilter("ignore", UserWarning)

importlib.invalidate_caches()

sys.path.insert(0, os.getcwd() + os.sep + "eggs")

try:
    import setuptools
    from setuptools.command.easy_install import main
    import pkg_resources
except ImportError as ex:
    print("setuptools is needed to use bot-local: %s" % str(ex))
    os._exit(1)

for line in os.popen("python3 setup.py sdist").readlines():
    print(line.strip())

fns = os.listdir("dist")
name = ""
highest = 0
for fn in fns:
    f = fn.split(".")[0]
    nr = int(f.split("-")[-1])
    if nr > highest:
        highest = nr
        name = fn

runstring = '--always-copy --user -U -l dist/%s' % name
main(runstring.split())
