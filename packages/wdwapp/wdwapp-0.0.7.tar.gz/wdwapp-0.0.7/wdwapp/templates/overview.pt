<div metal:use-macro="load: layout.pt">
			<div metal:fill-slot="content">
				<div class="content">
					<h3>Données actuelles à ${ltime}</h3>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Lieux</th>
                                <th>Température</th>
                                <th>Humidité</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr tal:repeat="data datas">
                                <td>
                                    <a href="${request.route_url('detail', lid=data.id)}">
                                        ${data.name}
                                    </a>
                                </td>
                                <td>${round(data.temperature, 1)} °C</td>
                                <td>${data.humidity} %</td>
                            </tr>
                        </tbody>
                    </table>
				</div>
			</div>
</div>
