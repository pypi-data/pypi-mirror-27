import os
import sys
import argparse
from toktokkie.utils.iconizing.Iconizer import Iconizer


def parse_args():

    parser = argparse.ArgumentParser()
    parser.add_argument("directory", help="The directory to iconize")
    parser.add_argument("-r", "--recursive", action="store_true", help="Recursively iconizes the directory")
    return parser.parse_args()


if __name__ == "__main__":

    args = parse_args()
    iconizer = Iconizer()
    directory = os.path.abspath(args.directory)

    if not os.path.isdir(directory):
        print("Not a valid directory")
        sys.exit(1)

    print("Starting Iconizing...")

    if args.recursive:
        iconizer.recursive_iconize(directory)
    else:
        iconizer.iconize_directory(directory)

    print("Done")
