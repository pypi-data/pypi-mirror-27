mixin __something(url, id)
  p(href='${url}', id='${id}') Hello, World!

mixin __print_site(object_name)
  p Site: {{ ${object_name}.site }}

mixin __print_if(object_name)
  h2 object_name: ${object_name}
  -if ${object_name}
    p Site: {{ ${object_name}.site }}
  -else
    p Site: MISSING

mixin __print_text(header, text)
  h1 ${header}
  p ${text}

mixin __prefixed_suffixed_name(name, prefix='prefix_', suffix='_form')
  p ${prefix}${name}${suffix}


+__something('http://pugjs.com', 'id1')

+__print_if('object')

+__print_if('ERROR')

+__print_text("alpha, bravo", 'charlie')
+__print_text("alpha", '|date:"Y-m-d"')

+__prefixed_suffixed_name('alpha')
+__prefixed_suffixed_name('bravo', 'BRAVO_')
+__prefixed_suffixed_name('charlie', 'CHARLIE_', '_3')
+__prefixed_suffixed_name('delta', suffix='_XXX')
+__prefixed_suffixed_name('echo', 'suffix=prefix_')
