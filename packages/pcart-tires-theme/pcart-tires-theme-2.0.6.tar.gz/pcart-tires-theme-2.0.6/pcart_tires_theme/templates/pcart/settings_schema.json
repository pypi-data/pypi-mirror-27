      {
        "type": "image",
        "id": "newsletter_popup_bg.png",
        "label": "Image file",
        "max-width": 470,
        "max-height": 440,
        "info": "Maximum image dimensions are 470x440px"
      },
      {
        "type": "text",
        "id": "newsletter_popup_title",
        "label": "Pop-up title"
      },
      {
        "type": "text",
        "id": "newsletter_popup_disable",
        "label": "Pop-up disable expiration (in days)",
        "info": "Number of days until user will see pop-up again (after clicking 'Dont show this message again' button or successful subscription)"
      },
      {
        "type": "radio",
        "id": "newsletter_form_type",
        "label": "Newsletter subscription form",
        "options": [
          {
            "value": "newsletter_shopify",
            "label": "Shopify native form"
          },
          {
            "value": "newsletter_mailchimp",
            "label": "Mailchimp service"
          }
        ]
      },
      {
        "type": "paragraph",
        "content": "If you choose 'Shopify native form', all subscribers' emails will be collected at 'Customers' section, marked as 'Newsletter Subscriber'."
      },
      {
        "type": "text",
        "id": "newsletter_mailchimp_url",
        "label": "Mailchimp form action URL",
        "info": "[Enter your Mailchimp form action URL](http:\/\/support.shopify.com\/customer\/portal\/articles\/640278)"
      }
    ]
  },
