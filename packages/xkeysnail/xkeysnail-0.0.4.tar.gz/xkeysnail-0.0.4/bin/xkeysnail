#!/usr/bin/env python

from xkeysnail.input import loop, select_device


def eval_file(path):
    with open(path, "rb") as file:
        exec(compile(file.read(), path, 'exec'))


def main():
    device = select_device()
    loop(device)


if __name__ == '__main__':
    import sys
    eval_file(sys.argv[1])
    main()
